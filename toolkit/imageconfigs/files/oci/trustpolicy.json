{
    "version": "1.0",
    "trustPolicies": [
        {
            "name": "mcr",
            "registryScopes": [ "mcr.microsoft.com/oss/kubernetes/kubeadm-bootstrap-controller",
                                "mcr.microsoft.com/azure-cli"],
            "signatureVerification": {
                "level" : "strict"
            },
            "trustStores": [ "ca:supplychain" ],
            "trustedIdentities": [
                "x509.subject: CN=Microsoft SCD Products RSA Signing,O=Microsoft Corporation,L=Redmond,ST=Washington,C=US"
            ]
        },
        {
            "name": "global",
            "registryScopes": [ "*" ],
            "signatureVerification": {
                "level": "skip"
            }
        }
    ]
}
